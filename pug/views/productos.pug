html 
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    title='Productos'

    body 
        table(class='table')
            thead   
                tr 
                    th(scope='col') Id
                    th(scope='col') Name
                    th(scope='col') Price
                    th(scope='col') Icon
            tbody 
            if product.length > 0 
                each prod in product
                    tr
                        th(scope='row') #{prod.id}
                        td #{prod.title}
                        td #{prod.price}
                        td 
                            img(src=prod.thumbnail width='50' height='50')
            else 
                h3(class='alert alert-danger') no se encontraron datos
        a(class ='alert alert-danger' href='/' style='text-decoration: none; color: black;') Ingresar Productos